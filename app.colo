 margin-top: 2rem;
}


.cta-section h3 {
 color: #333;
 margin-bottom: 1rem;
 font-size: 1.5rem;
}


.cta-section p {
 color: #666;
 margin-bottom: 2rem;
 font-size: 1.1rem;
}


/* Mejoras responsive */
@media (max-width: 768px) {
 .header-actions {
   flex-direction: column;
   gap: 0.5rem;
 }
  .btn-primary, .btn-secondary {
   padding: 0.6rem 1rem;
   font-size: 0.9rem;
   width: 100%;
 }
  .reservation-section {
   padding: 1rem;
 }
  .client-reservation.embedded .reservation-form {
   padding: 1.5rem;
 }
  .main-nav {
   flex-wrap: wrap;
 }
  .nav-btn {
   padding: 0.5rem 1rem;
   font-size: 0.9rem;
 }
}


@media (max-width: 900px) {
 .header-content {
   flex-direction: column;
   gap: 1rem;
   text-align: center;
 }
  .logo-section h1 {
   font-size: 1.5rem;
 }
  .main-nav {
   order: 3;
   width: 100%;
 }
}


/* Estados de carga mejorados */
.loading-tables {
 padding: 1rem;
 text-align: center;
 background: #f8f9fa;
 border-radius: 5px;
 border: 1px dashed #dee2e6;
}


.success-message {
 margin-top: 1rem;
 font-style: italic;
 color: #666;
}


/* Mejoras visuales para el formulario */
.form-row {
 display: grid;
 grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
 gap: 1.5rem;
 margin-bottom: 1.5rem;
}


.form-group {
 display: flex;
 flex-direction: column;
}


.form-group label {
 margin-bottom: 0.5rem;
 font-weight: 600;
 color: #333;
}


.form-group input,
.form-group select,
.form-group textarea {
 padding: 0.8rem;
 border: 1px solid #ddd;
 border-radius: 5px;
 font-size: 1rem;
 transition: border-color 0.3s;
}


.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
 outline: none;
 border-color: #f57710;
 box-shadow: 0 0 0 2px rgba(245, 119, 16, 0.1);
}


.submit-btn {
 width: 100%;
 padding: 1rem;
 font-size: 1.1rem;
 margin-top: 1rem;
}


.submit-btn:disabled {
 background: #6c757d;
 cursor: not-allowed;
 transform: none;
}


.submit-btn:disabled:hover {
 background: #6c757d;
 transform: none;
 box-shadow: none;
}
