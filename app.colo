/* Home Page Styles */
.home-page {
 min-height: 100vh;
 display: flex;
 flex-direction: column;
}


.home-header {
 background: linear-gradient(135deg, #f57710 0%, #ef742d 100%);
 color: white;
 text-align: center;
 padding: 2rem;
}


.home-header h1 {
 font-size: 2.5rem;
 margin-bottom: 0.5rem;
}


.home-header p {
 font-size: 1.2rem;
 margin-bottom: 1rem;
}


.admin-link {
 color: white;
 text-decoration: underline;
}


.reservation-form-container {
 max-width: 600px;
 margin: 2rem auto;
 padding: 2rem;
 background: white;
 border-radius: 10px;
 box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}


.reservation-form-container h2 {
 text-align: center;
 margin-bottom: 2rem;
 color: #333;
}


.reservation-form {
 display: flex;
 flex-direction: column;
 gap: 1.5rem;
}


.form-group {
 display: flex;
 flex-direction: column;
}


.form-group label {
 margin-bottom: 0.5rem;
 font-weight: 500;
 color: #333;
}


.form-group input,
.form-group select {
 padding: 0.75rem;
 border: 1px solid #ddd;
 border-radius: 5px;
 font-size: 1rem;
}


.submit-btn {
 background: #f57710;
 color: white;
 border: none;
 padding: 1rem;
 border-radius: 5px;
 font-size: 1.1rem;
 cursor: pointer;
 transition: background 0.3s;
}


.submit-btn:hover {
 background: #ef742d;
}


.home-footer {
 background: #333;
 color: white;
 text-align: center;
 padding: 1rem;
 margin-top: auto;
}


/* Responsive */
@media (max-width: 1200px) {
 .reservation-form-container {
   margin: 1rem;
   padding: 1.5rem;
 }
  .home-header h1 {
   font-size: 2rem;
 }
}
/* Client Reservation Styles */
/* ================================
  CLIENT RESERVATION STYLES
================================ */
.client-reservation {
 max-width: 1200px;
 margin: 0 auto;
 padding: 30px 20px;
 font-family: "Segoe UI", Roboto, sans-serif;
 color: #2c3e50;
}

/* ----- Header ----- */
.reservation-header {
  text-align: center;
  margin-bottom: 40px;
  font-size: 2rem; /* tama침o base del texto */
  padding: 0 1rem; /* un poco de espacio lateral en m칩viles */
}



/* Pantallas peque침as (m칩viles) */
@media (max-width: 276px) {
  .reservation-header {
    font-size: 1.5rem;
    margin-bottom: 20px;
  }
}


.reservation-header h1 {
 color: #f57710;
 margin-bottom: 12px;
 font-size: 2.2rem;
 font-weight: 700;
}


.reservation-header p {
 color: #555;
 font-size: 1.1rem;
 max-width: 700px;
 margin: 0 auto;
}


/* ----- Form ----- */
.public-form {
 background: #fff;
 padding: 35px;
 border-radius: 12px;
 box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
 margin-bottom: 40px;
}


.form-row {
 display: grid;
 grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
 gap: 25px;
 margin-bottom: 25px;
}


.form-group {
 display: flex;
 flex-direction: column;
}


.form-group label {
 margin-bottom: 8px;
 font-weight: 600;
 color: #2c3e50;
 font-size: 0.95rem;
}


.form-group input,
.form-group select,
.form-group textarea {
 padding: 14px;
 border: 1px solid #dcdcdc;
 border-radius: 6px;
 font-size: 1rem;
 transition: all 0.3s ease;
}


.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
 outline: none;
 border-color: #f57710;
 box-shadow: 0 0 6px rgba(245, 119, 16, 0.3);
}


/* ----- Submit Button ----- */
.submit-btn {
 background: #f57710;
 color: #fff;
 border: none;
 padding: 16px 35px;
 border-radius: 6px;
 font-size: 1.15rem;
 font-weight: 600;
 cursor: pointer;
 transition: all 0.3s ease;
 width: 100%;
 margin-top: 20px;
 letter-spacing: 0.5px;
}


.submit-btn:hover {
 background: #e66a0c;
 transform: translateY(-2px);
}


/* ----- Form Note ----- */
.form-note {
 margin-top: 18px;
 text-align: center;
 color: #777;
 font-size: 0.9rem;
}


/* ----- Restaurant Info ----- */
.restaurant-info {
 background: #fff;
 padding: 35px;
 border-radius: 12px;
 box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
}


.restaurant-info h2 {
 color: #f57710;
 margin-bottom: 25px;
 text-align: center;
 font-size: 1.8rem;
}


.info-grid {
 display: grid;
 grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
 gap: 25px;
}


.info-item {
 text-align: center;
 padding: 22px;
 background: linear-gradient(145deg, #fafafa, #f1f1f1);
 border-radius: 8px;
 box-shadow: 0 3px 8px rgba(0, 0, 0, 0.05);
 transition: transform 0.2s ease;
}


.info-item:hover {
 transform: translateY(-3px);
}


.info-item h3 {
 color: #2c3e50;
 margin-bottom: 10px;
 font-size: 1.1rem;
 font-weight: 600;
}


.info-item p {
 color: #555;
 margin: 5px 0;
 font-size: 0.95rem;
}


/* ----- Reservation Success ----- */
.reservation-success {
 text-align: center;
 padding: 60px 20px;
}


.reservation-success h2 {
 color: #28a745;
 margin-bottom: 25px;
 font-size: 1.8rem;
}


.success-animation {
 font-size: 4.5rem;
 color: #28a745;
 margin: 25px 0;
}


.client-view .content-wrapper {
 margin-top: 0;
 padding: 0;
}




/* Responsive */
@media (
 max-width: 1800x) {
 .client-reservation {
   padding: 10px;
    margin: 0 auto;
 }
  .public-form {
   padding: 20px;
 }
  .form-row {
   grid-template-columns: 1fr;
 }
  .info-grid {
   gap: clamp(1rem, 5vw, 190px);
 }
}
/* Admin Styles */
.home-admin {
 padding: 20px;
 max-width: 1900px;
 margin: 0 auto;
}


.admin-nav {
 display: flex;
 gap: 10px;
 margin-bottom: 20px;
}


